<%- include('partials/header') %>
    <div class="container loginContainStyle">
        <div class="row">
            <div class="card loginCardStyle">
                <div class="card-header">
                    <div class="row">
                        <p id="loginMessage" class="col loginColDiv">Enter your username and password here.</p>
                    </div>
                </div>
                <br>
                <br>
                <div class="card-body">
                    <form action="/" method="POST">
                        <div class="row">
                            <input class="col form-control inputStyle loginColDiv" type="text" name="username" placeholder="Username" />
                        </div>
                        <br>
                        <br>
                        <div class="row">
                            <input class="col form-control inputStyle loginColDiv" type="password" name="password" placeholder="Password" />
                        </div>
                        <br>
                        <div class="row">
                            <button class="col btn btn-block loginColDiv buttonStyle" type="submit">Login</button>
                        </div>
                    </form>
                </div>
                <hr style="margin-left: 10px; margin-right: 10px;">
                <div class="card-body">
                    <div class="row">
                        <button class="col-md-5 createButtonStyle" type="button" onclick="toAccountPage()">Create Account</button>
                        <br>
                        <div class="col-md-2"></div>
                        <br>
                        <button class="col-md-5 createButtonStyle" type="button" onclick="toCredentialsPage()">Retrieve Credentials</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%- include('partials/footer') %>